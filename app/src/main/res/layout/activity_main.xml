<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input for Celsius temperature -->
    <EditText
        android:id="@+id/celsiusEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Celsius"
        android:inputType="numberDecimal"/>

    <!-- Button to trigger conversion -->
    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert Temperature"/>

    <!-- Display Celsius value -->
    <TextView
        android:id="@+id/celsiusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celsius: 0"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- Display Fahrenheit value -->
    <TextView
        android:id="@+id/fahrenheitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fahrenheit: 32"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
